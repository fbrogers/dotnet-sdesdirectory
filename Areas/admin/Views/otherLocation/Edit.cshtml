@model SDES___Office_Directory.Models.otherLocation

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/admin/Views/Shared/_AdminLayout.cshtml";
}

@section links{
    <ul class="content-main-links">
        <li>@Html.ActionLink("Back to Index", "Index")</li>
    </ul>
}

@using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "fieldset" })) {
    
    <fieldset>
        <div class="space-left">
            @Html.ValidationSummary(true)
        </div>
        <div class="shift-right">

            @Html.HiddenFor(model => model.otherLocationId)

            <div class="editor-label">
                @Html.LabelFor(model => model.officeId)
            </div>
            <div class="editor-field">
                @Html.DropDownList("officeId", (List<SelectListItem>)ViewBag.offices, string.Empty, Model.officeId)
                @Html.ValidationMessageFor(model => model.officeId)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.otherLocationName)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.otherLocationName)
                @Html.ValidationMessageFor(model => model.otherLocationName)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.otherLocationBuildingName)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.otherLocationBuildingName)
                @Html.ValidationMessageFor(model => model.otherLocationBuildingName)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.otherLocationBuildingNum)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.otherLocationBuildingNum)
                @Html.ValidationMessageFor(model => model.otherLocationBuildingNum)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.otherLocationRoomNum)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.otherLocationRoomNum)
                @Html.ValidationMessageFor(model => model.otherLocationRoomNum)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.otherLocationPhone)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.otherLocationPhone)
                @Html.ValidationMessageFor(model => model.otherLocationPhone)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.otherLocationFax)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.otherLocationFax)
                @Html.ValidationMessageFor(model => model.otherLocationFax)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.otherLocationEmail)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.otherLocationEmail)
                @Html.ValidationMessageFor(model => model.otherLocationEmail)
            </div>
        </div>
    </fieldset>
    
    <div class="submitbox">
        <input type="submit" value="@ViewBag.Title" />
    </div>
}