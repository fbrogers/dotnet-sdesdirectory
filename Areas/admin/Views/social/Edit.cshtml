@model SDES___Office_Directory.Models.social

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/admin/Views/Shared/_AdminLayout.cshtml";
}


@section links{
    <ul class="content-main-links">
        <li>@Html.ActionLink("Back to Office", "Details", "office", new { id = Model.officeId }, null)</li>
    </ul>
}

@using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "fieldset" })) {
    
    <fieldset>
        <div class="space-left">
            @Html.ValidationSummary(true)
        </div>
        <div class="shift-right">
            @Html.HiddenFor(model => model.socialId)
            @Html.HiddenFor(model => model.officeId)

            <div class="editor-label">
                @Html.LabelFor(model => model.socialName)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.socialName)
                @Html.ValidationMessageFor(model => model.socialName)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.socialUri)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.socialUri)
                @Html.ValidationMessageFor(model => model.socialUri)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.socialHandle)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.socialHandle)
                @Html.ValidationMessageFor(model => model.socialHandle)
            </div>
        </div>
        </fieldset>
    
    <div class="submitbox">
        <input type="submit" value="@ViewBag.Title" />
    </div>
}

