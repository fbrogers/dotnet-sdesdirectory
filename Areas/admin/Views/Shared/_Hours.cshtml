@using SDES___Office_Directory.Code
@model IEnumerable<SDES___Office_Directory.Models.hour>

<h3>Hours of Operation</h3>
<table class="grid smaller">
    <tr>
        <th>
            <a href="@Url.Action("Create", "hours", new { id = ViewBag.Office })">
                <img src="https://assets.sdes.ucf.edu/images/icons/fff_add.png" alt="icon" class="clean" />
            </a>
        </th>
        <th>
            Day
        </th>
        <th>
            Open Time
        </th>
        <th>
            Close Time
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink("Edit", "Edit", "hours", new { id=item.hoursId }, null) |
            @Html.ActionLink("Delete", "Delete", "hours", new { id = item.hoursId }, null)
        </td>
        <td>
            @Init.ConvertDaytoText(item.hoursDay)
        </td>
        <td>
            @(item.hoursOpen.HasValue ? DateTime.ParseExact(item.hoursOpen.ToString(), "HH:mm:ss", null).ToString("h:mm tt") : "Closed")
        </td>
        <td>
            @(item.hoursClose.HasValue ? DateTime.ParseExact(item.hoursClose.ToString(), "HH:mm:ss", null).ToString("h:mm tt") : "Closed")
        </td>
    </tr>
}

</table>

